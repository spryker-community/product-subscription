<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\Availability\Persistence" package="src.Orm.Zed.Availability.Persistence">

    <table name="spyc_product_subscription">
        <column name="id_product_subscription" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_customer" required="true" type="INTEGER"/>
        <column name="fk_sales_order_item" required="true" type="INTEGER"/>
        <column name="frequency" required="true" type="INTEGER"/>
        <behavior name="timestampable"/>
        <behavior name="archivable"/>
        <foreign-key name="spy_cus_dat_cha-fk_customer" foreignTable="spy_customer" phpName="Customer" refPhpName="CustomerDataChangeRequest" onDelete="CASCADE">
            <reference foreign="id_customer" local="fk_customer"/>
        </foreign-key>

        <index name="spy_cus_dat_cha-fk_customer">
            <index-column name="fk_customer"/>
        </index>

        <foreign-key name="spy_cus_dat_cha-fk_sales_order_item" foreignTable="spy_sales_order_item" phpName="OrderItem" refPhpName="Discount">
            <reference local="fk_sales_order_item" foreign="id_sales_order_item"/>
        </foreign-key>

        <index name="index-spy_cus_dat_cha-fk_sales_order_item">
            <index-column name="fk_sales_order_item"/>
        </index>

        <id-method-parameter value="spy_cus_dat_cha_pk_seq"/>
    </table>

</database>
